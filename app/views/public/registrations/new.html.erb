<div class="container mt-3">
  <div class="row">
    <div class="col">
      <h5>新規会員登録</h5>

      <%= form_with model: @customer, url: customer_registration_path do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
          <table class="table table-borderless">
            <tr>
              <td>名前</td>
              <td><%= f.label :last_name, "(姓)" %></td>
              <td><%= f.text_field :last_name, placeholder: "令和" %></td>
              <td><%= f.label :last_name, "(名)" %></td>
              <td><%= f.text_field :first_name, placeholder: "道子" %></td>
            </tr>
            <tr>
              <td>フリガナ</td>
              <td><%= f.label :last_name_furigana, "(セイ)" %></td>
              <td><%= f.text_field :last_name_furigana, placeholder: "レイワ" %></td>
              <td><%= f.label :last_name_furigana, "(メイ)" %></td>
              <td><%= f.text_field :first_name_furigana, placeholder: "ミチコ" %></td>
            </tr>
            <tr>
              <td><%= f.label :email, "メールアドレス" %></td>
              <td></td>
              <td><%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com" %></td>
            </tr>
            <tr>
              <td><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></td>
              <td></td>
              <td><%= f.text_field :postal_code, placeholder: "0000000" %></td>
            </tr>
            <tr>
              <td><%= f.label :address, "住所" %></td>
              <td></td>
              <td><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0" %></td>
            </tr>
            <tr>
              <td><%= f.label :telephone_number, "電話番号(ハイフンなし)" %></td>
              <td></td>
              <td><%= f.telephone_field :telephone_number, placeholder: "00000000000" %></td>
            </tr>
            <tr>
              <td><%= f.label :password, "パスワード(6文字以上)" %></td>
              <td></td>
              <td><%= f.password_field :password, autocomplete: "new-password" %></td>
            </tr>
            <tr>
              <td><%= f.label :password_confirmation, "パスワード(確認用)" %></td>
              <td></td>
              <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
            </tr>
            <tr>
              <td colspan="2"></td>
              <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
            </tr>
          </table>
        <% end %>

      <h5>既に登録済みの方</h5>
      <%= render "public/shared/links" %>

    </div>
  </div>
</div>

