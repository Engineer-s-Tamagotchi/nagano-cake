<div class="container">
  <div class="row">
    <div class="col">
      <h3>配送先編集</h3>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%= form_with model: @address, local: true do |f| %>
      <table>
        <tr>
          <div class="form-group">
            <th><%= f.label :"郵便番号(ハイフンなし)" %></th>
            <th><%= f.text_field :postal_code, placeholder:"0000000" %></th>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <th><%= f.label :"住所" %></th>
            <th><%= f.text_field :address, placeholder:"住所を入力してください", :size => "50" %></th>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <th><%= f.label :"宛名" %></th>
            <th><%= f.text_field :name, placeholder:"名前を入力してください", :size => "30" %></th>
            <th class="ml-5"><%= f.submit "変更内容を保存", class:"btn btn-success" %></th>
          </div>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>