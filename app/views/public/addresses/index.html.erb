<div class="container">
  <div class="row">
    <div class="col">
      <h3>配送先登録/一覧</h3>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%= form_with model: @address, local: true do |f| %>
      <table>
        <tr>
          <div class="form-group">
            <th><%= f.label :"郵便番号(ハイフンなし)" %></th>
            <td><%= f.text_field :postal_code, placeholder:"0000000", id: "customer_postal_code" %></td>
          </div>
        </tr>
        <tr>
        <div calss="form-group">
          <th><%= f.label :"住所" %></th>
          <td><%= f.text_field :address, placeholder:"住所を入力してください", :size => "50", id: "customer_address" %></td>
        </div>
        </tr>
        <tr>
        <div calss="form-group">
          <th><%= f.label :"宛名" %></th>
          <td><%= f.text_field :name, placeholder:"名前を入力してください"%></td>
        　<td><%= f.submit "新規登録", class:"btn btn-success" %></td>
          </div>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <table class="table table-bordred">
        <thead class="table-active">
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛先</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |address| %>
            <tr>
              <td><%= address.postal_code %></td>
              <td><%= address.address %></td>
              <td><%= address.name %></td>
              <td><%= link_to "編集する", edit_address_path(address), class:"btn btn-success" %> <%= link_to "削除する", address,method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-danger" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
