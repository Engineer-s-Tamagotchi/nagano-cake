<div class="container mt-5">
 <div class="row">
  <div class="col-md-10 mx-auto">
   
   <h3 class="d-inline-block mb-3"><strong>商品一覧</strong></h3>
   <span>(全<%= @items.count %>件)</span>
   <div class="row row-cols-4">
    <% @items.each do |item| %>
     <div class="col mb-3" style="font-weight: bold;">
       <%= link_to item_path(item) do %>
       <div class="item-image text-center border" style="background-color: darkgray;">
        <%= image_tag item.get_item_image(200,100) %></br>
       </div>
       <% end %>
      <div class="item-name mt-2">
       <%= link_to item.name, item_path(item), class: "text-dark", style: "text-decoration: none;" %></br>
      </div>
      <div class="item_price mt-2">
       ¥<%= item.including_tax_price.to_s(:delimited) %>
      </div>
     </div>
    <% end %>
   </div>
   
  </div>
 </div>
</div>

