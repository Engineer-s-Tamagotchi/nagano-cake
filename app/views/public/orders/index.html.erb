<div class="container mt-5">
  <div class="row">
    <div class="col">
      <h5>注文履歴一覧</h5>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th class="table-active">注文日</th>
            <th class="table-active">配送先</th>
            <th class="table-active">注文商品</th>
            <th class="table-active">支払金額</th>
            <th class="table-active">ステータス</th>
            <th class="table-active">注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime("%Y/%m/%d") %></td>
            <td>
              <%= "〒" + order.postal_code %></br>
              <%= order.address %></br>
              <%= order.name %>
            </td>
            <td>
              <% order.order_details.each do |order_detail| %>
                <%= order_detail.item.name %>
              <% end %>
            </td>
            <td><%= order.billing_price %></td>
            <td><%= order.status_i18n %></td>
            <td>
              <%= link_to order_path(order) do %>
                <span class="btn btn-primary">表示する</span>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>