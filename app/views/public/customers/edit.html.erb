<div class="container mt-5">
  <div class="row">
    <div class="col">
      <h5 class=" col-md-2 mx-5 mb-5">会員情報編集</h5>

      <%= form_with model: @customer　do |f| %>
        <div class="form-group">
          <table class="table-sm table-borderless">
            <tr>
              <td>氏名</td>
              <td><%= f.text_field :last_name, placeholder: "令和", class: "form-control" %></td>
              <td><%= f.text_field :first_name, placeholder: "道子", class: "form-control ml-4" %></td>
            </tr>
            <tr>
              <td>フリガナ</td>
              <td><%= f.text_field :last_name_furigana, placeholder: "レイワ", class: "form-control" %></td>
              <td><%= f.text_field :first_name_furigana, placeholder: "ミチコ", class: "form-control ml-4" %></td>
            </tr>
            <tr>
              <td><%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "col-form-label" %></td>
              <td><%= f.text_field :postal_code, placeholder: "0000000", class: "form-control" %></td>
            </tr>
            <tr>
              <td><%= f.label :address, "住所", class: "col-form-label" %></td>
              <td colspan="6"><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control" %></td>
            </tr>
            <tr>
              <td><%= f.label :telephone_number, "電話番号(ハイフンなし)", class: "col-form-label" %></td>
              <td><%= f.telephone_field :telephone_number, placeholder: "00000000000", class: "form-control" %></td>
            </tr>
            <tr>
              <td><%= f.label :email, "メールアドレス", class: "col-form-label" %></td>
              <td><%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com", class: "form-control" %></td>
            </tr>
            <tr>
              <td colspan="2"></td>
              <td><%= f.submit "新規登録", class: "btn my-2 btn-success btn-block", style: "font-weight: bold;" %></td>
            </tr>
          </table>
        </div>
      <% end %>

    </div>
  </div>
</div>