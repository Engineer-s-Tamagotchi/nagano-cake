<div class="container mt-5">
  <div class="row">
    <div class="col">
      <h5 class="col-md-3 mb-5"><%= @customer.last_name + @customer.first_name %>さんの会員詳細</h5>
      
      <table class="table table-borderless col-md-8">
        <tr>
          <td class="w-25">会員ID</td>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td><%= @customer.full_name %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= @customer.full_name_furigana %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td colspan="4"><%= @customer.address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td colspan="4"><%= @customer.email %></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <td>
            <%= render 'customer_state', customer: @customer %>
          </td>
        </tr>
        <tr>
          <td></td>
          <td class="w-25"><%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-success" %></td>
          <td><%= link_to "注文履歴一覧を見る", admin_root_path, class: "btn btn-primary" %></td>
        </tr>
      </table>
    </div>
  </div>
</div>