<div class="container">
  <div class="row">
    <div class="col">
      <h5 class="col-md-4"><%= @customer.last_name + @customer.first_name %>さんの会員情報編集</h5>

      <%= form_with model: @customer, url: admin_customer_path do |f| %>
        <div class="form-group">
          <table class="table-sm table-borderless col-md-8 mt-5">
            <tr>
              <td>会員ID</td>
              <td><%= @customer.id %></td>
            </tr>
            <%= render "public/customers/form", f: f %>
            <tr>
              <td>会員ステータス</td>
              <td class="pt-2">
                <%= f.radio_button :is_active, :true %>
                <%= f.label :is_active, "有効", {value: :true, class: "d-inline-block"} %>
                <%= f.radio_button :is_active, :false, class: "ml-5" %>
                <%= f.label :is_active, "退会", {value: :false, class: "d-inline-block"} %>
                </td>
            </tr>
            <tr>
              <td></td>
              <td><%= f.submit "変更を保存", class: "btn my-4 btn-success btn-block", style: "font-weight: bold;" %></td>
            </tr>
          </table>
        </div>
      <% end %>
    </div>
  </div>
</div>