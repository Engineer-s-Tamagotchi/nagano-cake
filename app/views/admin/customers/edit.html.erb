<div class="container mt-5">
  <div class="row">
    <div class="col">
      <h5 class="col-md-4 mb-5"><%= @customer.last_name + @customer.first_name %>さんの会員情報編集</h5>
      
      <%= form_with model: @customer, url: admin_customer_path do |f| %>
        <div class="form-group">
          <table class="table-sm table-borderless col-md-8">
            <tr>
              <td>会員ID</td>
              <td><%= @customer.id %></td>
            </tr>
            <tr>
              <td class="w-25">氏名</td>
              <td class="w-25"><%= f.text_field :last_name, class: "form-control" %></td>
              <td class="w-25"><%= f.text_field :first_name, class: "form-control ml-4" %></td>
              <td class="w-25"></td>
            </tr>
            <tr>
              <td>フリガナ</td>
              <td><%= f.text_field :last_name_furigana, class: "form-control" %></td>
              <td><%= f.text_field :first_name_furigana, class: "form-control ml-4" %></td>
            </tr>
            <tr>
              <td>郵便番号</td>
              <td><%= f.text_field :postal_code, class: "form-control" %></td>
            </tr>
            <tr>
              <td>住所</td>
              <td colspan="6"><%= f.text_field :address, class: "form-control" %></td>
            </tr>
            <tr>
              <td>電話番号</td>
              <td><%= f.telephone_field :telephone_number,class: "form-control" %></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td><%= f.email_field :email, autocomplete: "email", class: "form-control" %></td>
            </tr>
            <tr>
              <td>会員ステータス</td>
              <td>
                <%= f.radio_button :is_active, :true %>
                <%= f.label :is_active, "有効", {value: :true, class: "d-inline-block"} %>
                <%= f.radio_button :is_active, :false, class: "ml-5" %>
                <%= f.label :is_active, "退会", {value: :false, class: "d-inline-block"} %>
                </td>
            </tr>
            <tr>
              <td></td>
              <td><%= f.submit "変更を保存", class: "btn btn-lg my-5 btn-success btn-block", style: "font-weight: bold;" %></td>
            </tr>
          </table>
        </div>
      <% end %>
    </div>
  </div>
</div>