<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 mx-auto">
      <h5 class="col-md-2">会員一覧</h5>

      <div class="col-md-10 mx-auto">
        <table class="table">
          <thead>
            <tr>
              <th class="table-active">会員ID</th>
              <th class="table-active">氏名</th>
              <th class="table-active">メールアドレス</th>
              <th class="table-active">ステータス</th>
              <th class="table-active" colspan="2"></th>
            </tr>
          </thead>
          <% @customers.each do |customer| %>
            <tbody>
              <tr>
                <td><%= customer.id %></td>
                <td>
                  <%= link_to admin_customer_path(customer) do %>
                    <%= customer.last_name + customer.first_name %>
                  <% end %>
                </td>
                <td><%= customer.email %></td>
                <td>
                  <% if customer.is_active %>
                    <strong style="color: limegreen">有効</strong>
                  <% else %>
                    <strong style="color: darkgray">退会</strong>
                  <% end %>
                </td>
                <td colspan="2"></td>
              </tr>
            </tbody>
          <% end %>
        </table>
      </div>
      <div class="d-flex justify-content-center">
        <%= paginate @customers %>
      </div>
    </div>
  </div>
</div>