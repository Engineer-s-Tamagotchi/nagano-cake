<div class="container mt-5">
  <div class ="row">
    <div class="col">
      <h1>商品新規登録</h1>
      <%= form_with model: @item, url:admin_items_path do |f| %>

        <div class="form-group">
          <%= f.label :item_image, "商品画像" %>
          <%= f.file_field :item_image, accept: "image/*", class: "form-control-file" %>
        </div>

        <div class="form-group">
          <%= f.label :name, "商品名" %>
          <%= f.text_field :name, class: "form-control-file" %>
        </div>

        <div class="form-group">
          <%= f.label :explanation, "商品説明" %>
          <%= f.text_area :explanation, class: "form-control-file" %>
        </div>

        <div class="form-group">
          <%= f.label :genre_id, "ジャンル" %>
          <%= f.select :genre_id, Genre.all.map{|genre| [genre.name,genre.id]}, class:"form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :excluding_tax_price, "税抜価格" %>
          <%= f.text_field :excluding_tax_price, class:"form-control" %>円
        </div>

        <div class="form-group">
          <%= f.label :is_on_sale, "販売ステータス" %>
            <%= f.radio_button :is_on_sale, :true, checked: true, id:"item_on_sale", class:"form-control" %>
            <label for="item_on_sale">販売中</label>
            <%= f.radio_button :is_on_sale, :flase, id:"item_sales_stop", class:"form-control" %>
            <label for="item_sales_stop">販売停止中</label>
        </div>
        <div><%= f.submit "新規登録", class:"btn btn-success" %></div>
        <% end %>
      </div>
  </div>
</div>
