<h1>商品新規登録</h1>
<%= form_with model: @item, url:admin_items_path do |f| %>
<div class="form-group">
  <label for="item_image">商品画像</label>
  <%= f.file_field :item_image, accept: "image/*", id:"item_image", class:"form-control" %>
</div>
<div class="form-group">
  <label for="item_name">商品名</label>
  <%= f.text_field :name, id:"item_name", class:"form-control" %>
</div>
<div class="form-group">
  <label for="item_explanation">商品説明</label>
  <%= f.text_area :explanation, id:"item_explanation", class:"form-control" %>
</div>
<div class="form-group">
  <label for="item_genre">ジャンル</label>
  <%= f.select :genre_id, Genre.all.map{|genre| [genre.name,genre.id]},　id:"item_genre", class:"form-control" %>
</div>
<div class="form-group">
  <label for="item_excluding_tax_price">税抜価格</label>
  <%= f.text_field :excluding_tax_price, id:"item_excluding_tax_price", class:"form-control" %>円
</div>
<div class="form-group">
  <label for="item_is_on_sale">販売ステータス</label>
    <%= f.radio_button :is_on_sale, :true, checked: true, id:"item_on_sale", class:"form-control" %>
    <label for="item_on_sale">販売中</label>
    <%= f.radio_button :is_on_sale, :flase, id:"item_sales_stop", class:"form-control" %>
    <label for="item_sales_stop">販売停止中</label>
</div>
<div><%= f.submit "新規登録", class:"btn btn-success" %></div>
<% end %>
